{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/bank-app-frontend/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/bank-app-frontend/index.html"
        }
    ],
    "builds": [
        {
            "src": "bank-app-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        }
    ]
}